<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="#00BCD4"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="My Math Game"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="167dp"
        android:layout_height="176dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@android:mipmap/sym_def_app_icon"
        tools:ignore="ContentDescription" />


    <Button
        android:id="@+id/buttonPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:background="#3F51B5"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:text="Play"
        android:textSize="30sp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <Button
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Final Score"
        android:id="@+id/final_score"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_below="@+id/buttonPlay"
        android:layout_centerHorizontal="true"
        android:background="#3F51B5"
        tools:ignore="HardcodedText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quit"
        android:textSize="30sp"
        android:id="@+id/quitButton"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/final_score"
        android:layout_alignRight="@+id/buttonPlay"
        android:layout_alignEnd="@+id/buttonPlay"
        android:layout_alignLeft="@+id/buttonPlay"
        android:background="#3F51B5"
        android:textColor="#000000"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/final_score_text"
        android:layout_below="@+id/quitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text=""
        android:textColor="#040C33"
        android:textStyle="bold"
        android:textSize="25sp"
        android:visibility="invisible"
        tools:ignore="HardcodedText" />

</RelativeLayout>

